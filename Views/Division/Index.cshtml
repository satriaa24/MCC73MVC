@model IEnumerable<MCC73MVC.Models.Division>

@{
    ViewData["Title"] = "Form Division";
}

<h1>@ViewData["Title"]</h1>

<p>
    <button type="button" class="btn btn-primary" position:relative;">
        <a asp-action="Create" class="text-white text-decoration-none">
        Tambah Data
    </a></button>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead class="text-center">
        <tr>
            <th width="50%">
                @Html.DisplayNameFor(model => model.Name)<!-- Tampil Field dari database-->
            </th>
            <th>
                Action  
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr class="text-center">
            <td>
                    @Html.DisplayFor(modelItem => item.Name)<!-- Tampil Isi dari database yang dipanggil-->
            </td>
            <td>
                <button class="btn btn-success"><a class="text-white" asp-action="Edit" asp-route-id="@item.DivisionId">Edit</a></button>
                <button class="btn btn-warning"><a class="text-white" asp-action="Details" asp-route-id="@item.DivisionId">Details</a></button>
                <button class="btn btn-danger"><a class="text-white" asp-action="Delete" asp-route-id="@item.DivisionId">Delete</a></button>
            </td>
        </tr>
    }
    </tbody>
</table>
