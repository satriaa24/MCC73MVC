@model IEnumerable<MCC73MVC.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Form Department</h1>

<p>
    <button type="button" class="btn btn-primary" position:relative;">
        <a asp-action="Create" class="text-white text-decoration-none">
            Tambah Data
        </a>
    </button>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead class="text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model  => model.Name)
            </th>
            <th>
                
                @Html.DisplayNameFor(model => model.Division)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Division.Name)
            </td>
            <td>
                    <button class="btn btn-success"><a class="text-white" asp-action="Edit" asp-route-id="@item.DivisionId">Edit</a></button>
                    <button class="btn btn-warning"><a class="text-white" asp-action="Details" asp-route-id="@item.DepartmentId">Details</a></button>
                    <button class="btn btn-danger"><a class="text-white" asp-action="Delete" asp-route-id="@item.DepartmentId">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
